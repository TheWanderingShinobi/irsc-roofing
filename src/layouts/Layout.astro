---
// component import
import MainHead from "../components/MainHead.astro";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
// style import
import "../styles/global.css";

const {
  title = "Innovative Roofing Systems Canada",
  description = "Quality,Integrity, and reliability are some of the core values that Innovative roofing systems Canada stands by.",
} = Astro.props;
---

<html lang="en">
  <MainHead {title} {description} />
  <body>
    <Nav />
    <main>
      <slot> Default Text</slot>
    </main>
    <Footer />
    <script src="/src/app.js"></script>
  </body>
</html>
